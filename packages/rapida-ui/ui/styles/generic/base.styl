*, *:before, *:after
  box-sizing: border-box
html, body
  margin: 0
  width: 100%
  height: 100%
body
  position: relative
  background-color: color.background
  color: color.text
  text-align: align.main
  font-weight: font.weight
  font-size: font.size
  font-family: font.family, font.stack
  line-height: baseline
  direction: dir.main
