*, *:before, *:after
  box-sizing: border-box
html, body
  size: 100%
  margin: 0
body
  position: relative
  direction: dir.main
  font-family: font.family, font.stack
  font-size: font.size
  font-weight: font.weight
  line-height: baseline
  text-align: align.main
  background-color: color.background
  color: color.text
