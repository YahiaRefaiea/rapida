nuotron= {
  size: baseline*3,
  stroke: 18px,
  dot: 24px,
  duration: animation.duration*2,
  twist: 4,
  rotation: 45deg
}

nuotron.safeArea= nuotron.size + nuotron.stroke*2 + nuotron.dot*2 + baseline

#nuotron
  top: 50%
  {align.main}: 50%
  margin-top: -(nuotron.size*.5)
  margin-{align.main}: -(nuotron.size*.5)
  size: nuotron.size
  transform: rotate(nuotron.rotation)
  &, & *, & *:before
    position: absolute
    display: block
  .ellipse, .dot
    top: 0
    {align.main}: 0
    bottom: 0
    {align.side}: 0

  //  ellipse
  .ellipse
    border: nuotron.stroke solid color.primary
    border-radius: 50%

  //  dot
  .dot
    animation: dotRotate nuotron.duration*nuotron.twist linear infinite
    @keyframes dotRotate
      100%
        transform: rotate(360deg)
    &:before
      top: -(nuotron.dot + nuotron.stroke)
      {align.main}: 50%
      margin-{align.main}: -(nuotron.dot*.5)
      size: nuotron.dot
      border-radius: 50%
      background-color: color.primary
      content: ''
      animation: dotEffect nuotron.duration ease-in-out infinite
      @keyframes dotEffect
        50%
          top: nuotron.size + nuotron.stroke
        0%, 50%, 100%
          transform: scale(1)
        25%
          transform: scale(.5)
        75%
          transform: scale(1.5)
