#text
  position: absolute
  top: 50%
  {align.main}: 0
  {align.side}: 0
  margin-top: nuotron.safeArea*.5
  text-align: center
  opacity: 0
  transform: translateY(baseline)
  animation: textAnimate animation.duration*2 animation.ease animation.duration*.5 forwards
  @keyframes textAnimate
    to
      opacity: 1
      transform: translateY(0)
