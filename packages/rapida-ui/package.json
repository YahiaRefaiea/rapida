{
  "name": "@rapida/ui",
  "version": "1.0.0",
  "description": "A starter-kit that creates an environment to help you focus on building UI",
  "author": {
    "name": "Nuotron",
    "email": "hi@nuotron.co",
    "url": "http://nuotron.co"
  },
  "license": "MIT",
  "repository": "https://github.com/nuotron/rapida/tree/master/packages/rapida-ui",
  "homepage": "https://github.com/nuotron/rapida",
  "private": true,
  "scripts": {
    "serve": "run-p watch server",
    "server": "webpack-dev-server --config bin/webpack.config.dev.babel.js --color",
    "prebuild": "npm run clean",
    "build": "cross-env NODE_ENV=production webpack --config bin/webpack.config.prod.babel.js --color",
    "test": "mocha bin/test.js ui/**/*.test.js --color",
    "eslint": "eslint **/*.js --color",
    "puglint": "pug-lint ui --reporter node_modules/puglint-stylish --color",
    "stylint": "stylint ui --config node_modules/stylint-config-rapida/.stylintrc --color",
    "generate-mock": "babel-node bin/generateMock.js --color",
    "preserve-mock": "npm run generate-mock",
    "serve-mock": "json-server data/db.json --port 8081 --color",
    "watch": "npm-watch",
    "clean": "rimraf dist data"
  },
  "dependencies": {
    "@babel/core": "7.7.4",
    "@babel/node": "7.7.4",
    "@babel/preset-env": "7.7.4",
    "@babel/register": "7.7.4",
    "@rapida/rest-calls": "1.0.1",
    "babel-loader": "8.0.6",
    "browser-sync": "2.26.7",
    "browser-sync-webpack-plugin": "2.2.2",
    "chai": "4.2.0",
    "chalk": "3.0.0",
    "copy-webpack-plugin": "5.0.5",
    "cross-env": "6.0.3",
    "css-loader": "3.2.1",
    "eslint": "6.7.2",
    "eslint-config-rapida": "1.0.1",
    "favicons-webpack-plugin": "1.0.2",
    "fs-extra": "8.1.0",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "3.2.0",
    "imagemin-webpack-plugin": "2.4.2",
    "json-schema-faker": "0.5.0-rc23",
    "json-server": "0.15.1",
    "kouto-swiss": "1.1.0",
    "lodash": "4.17.15",
    "mini-css-extract-plugin": "0.8.0",
    "mocha": "6.2.2",
    "moment": "2.24.0",
    "npm-run-all": "4.1.5",
    "npm-watch": "0.6.0",
    "optimize-css-assets-webpack-plugin": "5.0.3",
    "pug": "2.0.4",
    "pug-html-loader": "1.1.5",
    "pug-lint": "2.6.0",
    "pug-lint-config-rapida": "1.0.1",
    "puglint-stylish": "1.0.2",
    "rimraf": "3.0.0",
    "robotstxt-webpack-plugin": "7.0.0",
    "sitemap-webpack-plugin": "0.6.0",
    "stylint": "2.0.0",
    "stylint-config-rapida": "1.0.0",
    "stylus": "0.54.7",
    "stylus-loader": "3.0.2",
    "terser-webpack-plugin": "2.2.1",
    "webpack": "4.41.2",
    "webpack-cli": "3.3.10",
    "webpack-dev-server": "3.9.0",
    "webpack-merge": "4.2.2"
  },
  "watch": {
    "test": {
      "patterns": "ui/**/*.test.js",
      "extensions": "js"
    },
    "eslint": {
      "patterns": "**/*.js",
      "extensions": "js"
    },
    "puglint": {
      "patterns": "ui",
      "extensions": "pug"
    },
    "stylint": {
      "patterns": "ui",
      "extensions": "styl"
    },
    "serve-mock": {
      "patterns": "ui/mockModel.js",
      "extensions": "js"
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "12.14.0"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": "rapida"
  },
  "eslintIgnore": [
    "dist/"
  ],
  "pugLintConfig": {
    "extends": "rapida"
  }
}
