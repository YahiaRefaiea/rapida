{
  "name": "@rapida/api",
  "version": "1.0.0",
  "description": "Rapid JavaScript development environment for building RESTful API",
  "author": "Nuotron <hi@nuotron.co>",
  "license": "MIT",
  "repository": "https://github.com/nuotron/rapida/tree/master/packages/rapida-api",
  "homepage": "https://github.com/nuotron/rapida",
  "private": true,
  "engines": {
    "node": "10.15.3"
  },
  "scripts": {
    "start": "run-p test:watch lint:watch server",
    "server": "nodemon bin/server.js --exec babel-node --color",
    "server:prod": "cross-env NODE_ENV=production babel-node bin/server.js --color",
    "lint": "eslint **/*.js --color",
    "lint:watch": "chokidar --initial --silent \"bin/**/*.js\" \"api/**/*.js\" -c \"npm run lint\"",
    "test": "mocha --reporter progress bin/test.js api/**/*.test.js --color",
    "test:watch": "chokidar --initial --silent \"api/**/*.test.js\" -c \"npm run test\""
  },
  "dependencies": {
    "@babel/core": "7.7.4",
    "@babel/node": "7.7.4",
    "@babel/preset-env": "7.7.4",
    "@babel/register": "7.7.4",
    "@rapida/response": "1.0.0",
    "@rapida/rest": "1.0.0",
    "body-parser": "1.19.0",
    "chai": "4.2.0",
    "chalk": "3.0.0",
    "chokidar-cli": "2.1.0",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "cross-env": "6.0.3",
    "eslint": "6.7.2",
    "eslint-config-rapida": "1.0.0",
    "express": "4.17.1",
    "lodash": "4.17.15",
    "mocha": "6.2.2",
    "mongoose": "5.7.13",
    "morgan": "1.9.1",
    "nodemon": "2.0.1",
    "npm-run-all": "4.1.5"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "10.15.3"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "es6": true,
      "node": true,
      "mocha": true
    },
    "extends": "rapida",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    }
  }
}
