{
  "name": "@rapida/api",
  "version": "1.3.1",
  "description": "A starter-kit that creates an environment to help you focus on building a RESTful API",
  "author": "Yahia Refaiea <hi@yahiarefaiea.com> (http://yahiarefaiea.com)",
  "license": "MIT",
  "repository": "https://github.com/yahiarefaiea/rapida/tree/master/packages/rapida-api",
  "homepage": "https://github.com/yahiarefaiea/rapida",
  "private": true,
  "engines": {
    "node": "12.14.0"
  },
  "scripts": {
    "start": "run-p watch server",
    "server": "nodemon bin/server.js --exec babel-node --color",
    "server:prod": "cross-env NODE_ENV=production babel-node bin/server.js --color",
    "test": "mocha bin/test.js api/**/*.test.js --color",
    "lint": "eslint **/*.js --color",
    "watch": "npm-watch"
  },
  "dependencies": {
    "@babel/core": "7.7.7",
    "@babel/node": "7.7.7",
    "@babel/preset-env": "7.7.7",
    "@babel/register": "7.7.7",
    "@rapida/response": "1.3.1",
    "@rapida/rest": "1.3.1",
    "body-parser": "1.19.0",
    "chai": "4.2.0",
    "chalk": "3.0.0",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "cross-env": "6.0.3",
    "eslint": "6.8.0",
    "eslint-config-rapida": "1.3.1",
    "express": "4.17.1",
    "lodash": "4.17.15",
    "mocha": "7.0.0",
    "mongoose": "5.8.4",
    "morgan": "1.9.1",
    "nodemon": "2.0.2",
    "npm-run-all": "4.1.5",
    "npm-watch": "0.6.0"
  },
  "watch": {
    "test": {
      "patterns": "api/**/*.test.js",
      "extensions": "js"
    },
    "lint": {
      "patterns": "**/*.js",
      "extensions": "js"
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "12.14.0"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": "rapida"
  }
}
